                                 <tbody id="corpoTabela" name='corpoTabela'>
                                  
                                 </tbody> 
                          
                              </table>
                            </di>

                        </div>
                       
                      </div>

        
    </div>
    
    <!-- Modals -->

    <!-- Formulario Inclusao -->
    <div class="modal fade painelForm" id="modalSaidaQtd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Sainda de Produto</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
            <form id="formItemSaida" name="formItemSaida" action="/api/saldo/saida" method="POST">
              <div class="modal-body">
              
                  <div class="row">
                    <div class="input-field col s6" style="align-items: flex-end;">
                      <i class="material-icons prefix">weekend</i>
                      <span  id="item" name="item" type="text" class="validate"></span>>
                      <label class="active" for="item"><span id="itemSaida" ></span></label>
                    </div>
                  </div>
                  <div class="row">
                      <div class="input-field col s6" style="align-items: flex-start;">
                         Disponível: <label><h1 id="disponivel" ></h1></label>
                      </div>
                      <div class="input-field col s6" style="align-items: flex-start;">
                        <input type="hidden" id="qtdDisponivel" value="">
                        <input type="hidden" id="itemSaldo" value="">
                         Quantidade Saida: <input  id="quantidade" name="quantidade" type="text" class="validate">
                      
                    </div>
                  </div>
                  
               
              </div>
            </form>
            <div class="modal-footer">
              <div class="row container">
      
                <div class="col-3">
                
                  <button type="button" name="segundo" id="segundo" data-dismiss="modal" class="close btn btn-secondary" >Sair</button>

                </div>
                <div  class="col-3">
                  <button id="gravarSaidaEstoque" type='button' class="btn btn-primary">Gravar </button>
                </div>
                <div  class="col-6 "> 
                  <span id="divMsg" class="flow-text deep-orange-text text-darken-4"></span>
              </div>
              </div>
              
            
              
            </div>
          
        </div>
      </div>
    </div>
  <!-- </div> -->

    <!-- Formulario Alteração -->
    <div class="modal fade painelForm" id="modalAlterar" tabindex="-1" role="dialog" aria-labelledby="ModalAlteracao" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="ModalAlteracao">Alterar  Senha:</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
            <form id="formAlterarRecolhimento" name="formAlterarRecolhimento" action="/Recolhimento/novasenha" method="POST">
              <div class="modal-body">
              
                  <div class="row">
                    <div class="input-field col s12">
                      <input type="hidden" name="idRecolhimentoAlterar" id="idRecolhimentoAlterar" value="">
                      <!-- <i class="material-icons prefix">account_circle</i> -->
                      <h3 id="recolhimentoAlterar" style="font-style: oblique;"></h3>
                      <label class="active" for="recolhimento">Usuário</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">vpn_key</i>
                      <input  id="novasenha" name="novasenha" type="password" class="validate">
                      <label class="active" for="senha">Senha</label>
                    </div>
                  </div>
                  

                  <div class="row"><span style="margin-right: 10px;">Editar: </span>
                    <div class="switch">
                      <label>
                          Não
                          <input id="edicalAlteracaoRecolhimento" type="checkbox">
                          <span class="lever"></span>
                          Sim
                      </label>
                  </div>

              </div>
            </form>
            <div class="modal-footer">
              <div class="row container">
                  <div  class="col-6 center-align"> 
                    <span id="divMsg" class="flow-text deep-orange-text text-darken-4"></span>
                </div>
                <div class="col-3">
                
                  <button type="button" name="segundo" id="segundo" data-dismiss="modal" class="close btn btn-secondary" >Sair</button>

                </div>
                <div  class="col-3">
                  <button  onclick="alteracaoRecolhimento()" type='button' class="btn btn-primary">Gravar </button>
                </div>

              </div>
              
            
              
            </div>
          
        </div>
      </div>
    </div>

