  <body class=" blue-grey darken-3">

    <div class="row m-5">
        <div class="col-4 center" > <img width="100" height="100" src="/img/Itens.png"> </div>
        <div class="col-4 amber-text text-lighten-4 "><h1>Saldo Itens LD</h1></div>
        <div class="col-2">
          <ul class="list-group list-group-horizontal">
            <li class="list-group-item blue-grey darken-3"><a href="/principal"><i class="material-icons">home</i></a></li>
            <li class="list-group-item blue-grey darken-3"><a href="/LD"><i class="material-icons">arrow_back</i></a></li>
           
          </ul>          
        </div>
       
    </div>
    <div class="row container center">

                    <div class="col-4 ">
                        <label class="amber-text text-lighten-4 " >Produto</label>
                        <input type="text" id="codProduto" class="amber-text text-lighten-4 " name="codProduto">
                    </div>
                    <div class="col-2 ">
                        
                      <a class="btn-floating btn-large waves-effect waves-light cyan darken-4" onclick="pesquisarItensRecolhimento()" ><i class="material-icons">search</i></a>

                  </div>

    </div>

                        <div class="row container"> 
                            <div class=" col-8">

                              <blockquote  class="amber-text text-lighten-4 ">
                                <p id="captionTabela" ></p>
                              </blockquote>
                              <table id="tabelaItem" name='tabelaItem' class=" amber-text text-lighten-4 table-striped highlight table-hover responsive-table centered tbRecolhimento">
                                <colgroup>
                                  <col>
                                  <col  class="assistencia">
                                  
                                </colgroup>
                                <thead id="cabecalhotbItem" name='cabecalhotbItem'>
                                    <th  nowrap="true">Código Item</th>
                                    <th>Descrição Item</th>
                                    <th>Variação</th>
                                    <th>Acabamento</th>
                                    <th nowrap="true" class=" yellow-text text-lighten-3">Aguardando</th>
                                    <th nowrap="true" class=" green-text text-accent-3">Concertando</th>
                                    <th nowrap="true" class=" brown-text text-lighten-2">Estoque</th>
