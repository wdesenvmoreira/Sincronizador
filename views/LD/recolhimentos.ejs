<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css"  media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css.map"  media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="/css/home.css"  media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="/css/comum.css"  media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="/css/ld.css"  media="screen,projection"/>
   
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

  <body class=" blue-grey darken-3">

    <div class="row m-5">
        <div class="col-4 center" > <img width="100" height="100" src="/img/Itens.png"> </div>
        <div class="col-4 amber-text text-lighten-4 "><h1>Itens Recolhidos</h1></div>
        <div class="col-2">
          <ul class="list-group list-group-horizontal">
            <li class="list-group-item blue-grey darken-3"><a href="/principal"><i class="material-icons">home</i></a></li>
            <li class="list-group-item blue-grey darken-3"><a href="/LD"><i class="material-icons">arrow_back</i></a></li>
           
          </ul>          
        </div>

    </div>
    <div class="row">
        <div class="container ">
            <div class="row ">
              <div class=" col s12">

                <div class="row">
                    <div class="col-2 center">
                      <label class="amber-text text-lighten-4 " >Adicionar Recolhimento</label>
                        <a class="btn-floating btn-large waves-effect waves-light cyan darken-4" onclick="direcionar('/LD/Recolhimentos/Inclusao')"><i class="material-icons">add</i></a>
 
                    </div>
                    <div class="col-4">
                        <label class="amber-text text-lighten-4 " >Pesquisar Recolhimento</label>
                        <input type="text" id="codRecolhimento" class="amber-text text-lighten-4 " name="codRecolhimento">
                    </div>
                    <div class="col-4">
                        <label class="amber-text text-lighten-4 " >Produto</label>
                        <input type="text" id="codProduto" class="amber-text text-lighten-4 " name="codProduto">
                    </div>
                    <div class="col-2 ">
                        
                      <a class="btn-floating btn-large waves-effect waves-light cyan darken-4" onclick="pesquisarItensRecolhimento()" ><i class="material-icons">search</i></a>

                  </div>
                  <div class="row radios" >
                    <!-- <div class="container "> -->
            
                          <div class=" col s12">
                           
                              <!-- <div class="row "> -->
                              
                                <div class="container ">
                                  <form action="">

                                    <div class="subMenu ">
                                      <p class="flow-text center mg-4 ">
                                        <label class="z-depth-1  yellow-text text-lighten-3">
                                          <input type="checkbox" checked="checked" id="st_aguardando" />
                                          <span>Aguardando</span>
                                        </label>
                                  
                                        <label class="z-depth-1 green-text text-accent-3">
                                          <input type="checkbox" checked="checked" id="st_concertando" />
                                          <span>Concertando</span>
                                        </label>
                                    

                                        <label class="z-depth-1 brown-text text-lighten-2">
                                          <input type="checkbox"  id="st_emestoque"/>
                                          <span>Em Estoque</span>
                                        </label>
                                        
                                        <label class="z-depth-1 orange-text text-darken-1">
                                            <input type="checkbox"  id="st_descartado"/>
                                            <span>Descartado</span>
                                        
                                        </label>
                                    </div>
                                      
                                  </form>
                                 </div> 
                              <!-- </div> -->
                    
                          </div>
            
                    <!-- </div> -->
                  </div>
                </div>


                <div class="row">
                    <!-- <div class="col-4 container" >-->
                        <div class="row"> 
                            <div class=" col-12">
                              <!-- <span id="captionTabela"></span> -->
                              <blockquote  class="amber-text text-lighten-4 ">
                                <p id="captionTabela" ></p>
                              </blockquote>
                              <table id="tabelaRecolhimento" name='tabelaRecolhimento' class=" amber-text text-lighten-4 table-striped highlight table-hover responsive-table centered tbRecolhimento">
                                <colgroup>
                                  <col>
                                  <col  class="assistencia">
                                  
                                </colgroup>
                                <thead id="cabecalhotbRecolhimento" name='cabecalhotbRecolhimento'>
                                    <th class=" yellow-text text-lighten-3">Aguardando</th>
                                    <th class=" green-text text-accent-3">Concertando</th>
                                    <th class=" brown-text text-lighten-2">Estoque</th>
                                    <th  scope="col" >Recolhimento Devolução</th>
                                    <th scope="col">Documento Vinculado</th>
                                    <th  nowrap="true">Tipo</th>
                                    <th  nowrap="true">Código Item</th>
                                    <th>Descrição Item</th>
                                    <th>Variação</th>
                                    <th>Acabamento</th>
                                    <th>Quantidade</th>
                                    <th  nowrap="true">Motivo</th>
                                    <th  nowrap="true">Descartar</th>
                                    <th  nowrap="true">Deletar</th>
                                </thead>
                                 <tbody id="corpoTabela" name='corpoTabela'>
                                  
                                 </tbody> 
                          
                              </table>
                            </di>

                        </div>
                       
                      </div>
              
              </div>
            </div>
            
        </div>
        
    </div>
    
    <!-- Modals -->

    <!-- Formulario Inclusao -->
    <div class="modal fade painelForm" id="modalIncluir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Cadastro Usuário:</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
            <form id="formRecolhimento" name="formRecolhimento" action="/Recolhimento/incluir" method="POST">
              <div class="modal-body">
              
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">account_circle</i>
                      <input  id="recolhimento" name="recolhimento" type="text" class="validate">
                      <label class="active" for="recolhimento">Usuário</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">vpn_key</i>
                      <input  id="senha" name="senha" type="password" class="validate">
                      <label class="active" for="senha">Senha</label>
                    </div>
                  </div>
                  

                  <div class="row">
                    <div class="switch">
                      <label>
                          Não
                          <input id="edicao" type="checkbox">
                          <span class="lever"></span>
                          Sim
                      </label>
                  </div>

              </div>
            </form>
            <div class="modal-footer">
              <div class="row container">
                  <div  class="col-6 center-align"> 
                    <span id="divMsg" class="flow-text deep-orange-text text-darken-4"></span>
                </div>
                <div class="col-3">
                
                  <button type="button" name="segundo" id="segundo" data-dismiss="modal" class="close btn btn-secondary" >Sair</button>

                </div>
                <div  class="col-3">
                  <button id="gravar" type='button' class="btn btn-primary">Gravar </button>
                </div>

              </div>
              
            
              
            </div>
          
        </div>
      </div>
    </div>
  </div>

    <!-- Formulario Alteração -->
    <div class="modal fade painelForm" id="modalAlterar" tabindex="-1" role="dialog" aria-labelledby="ModalAlteracao" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="ModalAlteracao">Alterar  Senha:</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
            <form id="formAlterarRecolhimento" name="formAlterarRecolhimento" action="/Recolhimento/novasenha" method="POST">
              <div class="modal-body">
              
                  <div class="row">
                    <div class="input-field col s12">
                      <input type="hidden" name="idRecolhimentoAlterar" id="idRecolhimentoAlterar" value="">
                      <!-- <i class="material-icons prefix">account_circle</i> -->
                      <h3 id="recolhimentoAlterar" style="font-style: oblique;"></h3>
                      <label class="active" for="recolhimento">Usuário</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">vpn_key</i>
                      <input  id="novasenha" name="novasenha" type="password" class="validate">
                      <label class="active" for="senha">Senha</label>
                    </div>
                  </div>
                  

                  <div class="row"><span style="margin-right: 10px;">Editar: </span>
                    <div class="switch">
                      <label>
                          Não
                          <input id="edicalAlteracaoRecolhimento" type="checkbox">
                          <span class="lever"></span>
                          Sim
                      </label>
                  </div>

              </div>
            </form>
            <div class="modal-footer">
              <div class="row container">
                  <div  class="col-6 center-align"> 
                    <span id="divMsg" class="flow-text deep-orange-text text-darken-4"></span>
                </div>
                <div class="col-3">
                
                  <button type="button" name="segundo" id="segundo" data-dismiss="modal" class="close btn btn-secondary" >Sair</button>

                </div>
                <div  class="col-3">
                  <button  onclick="alteracaoRecolhimento()" type='button' class="btn btn-primary">Gravar </button>
                </div>

              </div>
              
            
              
            </div>
          
        </div>
      </div>
    </div>

    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="/js/materialize.min.js"></script>
    <script type="text/javascript" src="/js/jquery.slim.min.js"  ></script>
    <script type="text/javascript" src="/js/popper.min.js"  ></script>
    <script type="text/javascript" src="/js/bootstrap.min.js" ></script>
    <script type="text/javascript" src="/js/axios.js"></script>
    <script type="text/javascript" src="/js/LD/controleRecolhimentoLD.js"></script>
    <script type="text/javascript" src="/js/config.js"></script>
    <script>
        $(document).ready(function() {
          M.updateTextFields();
        });
    </script>
  </body>
</html>